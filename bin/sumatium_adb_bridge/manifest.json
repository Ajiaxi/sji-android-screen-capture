{
  "manifest_version": 2,
  "name": "Sumatium Virtual Android Device for ADB",
  "version": "1.0",
  "minimum_chrome_version": "33.0.1715.0",
  "permissions": ["system.network"],
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "sockets": {
    "tcpServer": {
      "listen": "127.0.0.1:*"
    },
    "tcp": {
      "connect": "127.0.0.1:5037"
    }
  },
  "externally_connectable": {
    "matches": [
      "https://www.sumatium.com/*",
      "*://localhost.local:*/*"
    ]
  }
}
